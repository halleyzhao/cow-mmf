CFLAGS += -fPIC -g
LDFLAGS += -shared -lpthread -z defs

ifdef LOCAL_INSTALL_PATH
    OUT_PATH := $(OUT_DEST_PATH)/$(LOCAL_INSTALL_PATH)
    INSTALL_PATH := $(INST_BASE_PATH)/$(LOCAL_INSTALL_PATH)
    OUT_RELATIVE_PATH := $(LOCAL_INSTALL_PATH)
else
    OUT_PATH := $(OUT_LIB_PATH)
    INSTALL_PATH := $(INST_BASE_PATH)/$(INST_LIB_PATH)
    OUT_RELATIVE_PATH := $(OUT_RELATIVE_LIB_PATH)
endif

include $(BASE_BUILD_DIR)/do_build
